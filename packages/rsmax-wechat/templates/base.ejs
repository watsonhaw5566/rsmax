<template name="REMAX_TPL">
    <block wx:for="{{root.children}}" wx:key="*this">
        <template is="REMAX_TPL_1_CONTAINER" data="{{i: root.nodes[item], a: ''}}" />
    </block>
</template>

<wxs module="_h">
    var __cache = {};

    module.exports = {
        v: function (value) {
            return value == null ? '' : value;
        },

        tid: function (type, ancestor) {
            var chain = ancestor || '';
            var key = type + '::' + chain;

            var cached = __cache[key];
            if (cached) {
                return cached;
            }

            var count = 0;
            if (chain) {
                var items = chain.split(',');
                for (var i = 0; i < items.length; i++) {
                    if (items[i] === type) {
                        count = count + 1;
                    }
                }
            }

            var id = 'REMAX_TPL_' + (1 + count) + '_' + type;
            __cache[key] = id;
            return id;
        }
        
        container: function (tid) {
            return 'REMAX_TPL_' + (tid + 1) + '_CONTAINER';
        }
    };
</wxs>

