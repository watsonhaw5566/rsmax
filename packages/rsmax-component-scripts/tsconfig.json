{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "@types/node",
      "vitest/globals"
    ]
  },
  "exclude": [
    "tests",
    "lib",
    "src/tests"
  ]
}
