{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "types": [
      "@types/node",
      "@rstest/core/globals"
    ],
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "tests",
    "lib"
  ]
}
