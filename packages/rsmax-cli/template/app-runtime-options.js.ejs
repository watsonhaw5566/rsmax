import { RuntimeOptions, PluginDriver } from 'rsmax/runtime';
import { pageEvents, appEvents, hostComponents } from '/__rsmax_runtime_options__';

const pluginDriver = new PluginDriver([
<% pluginFiles.forEach(file => { %>
  require('<%- file %>'),
<% }) %>
].map(p => p.default || p));

RuntimeOptions.apply({
  platform: "<%- platform %>",
  debug: <%- debug %>,
  pxToRpx: <%- pxToRpx %>,
  pluginDriver,
  hostComponents,
  pageEvents,
  appEvents,
})
