{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "esm",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "jsx": "react",
    "types": [
      "@types/jest",
      "@types/node",
      "vitest/globals"
    ],
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "src/__mocks__",
    "cjs",
    "esm"
  ]
}
